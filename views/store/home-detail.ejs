<%- include('../partials/head') %>
</head>
<body class="bg-light">
  <%- include('../partials/nav') %>

  <main class="container py-5">
    <div class="bg-white shadow-lg rounded-4 p-5">
      <h2 class="text-center text-danger fw-bold mb-5 display-5">
        Details of <%= home.houseName %>
      </h2>

      <div class="row g-4">
        <!-- Image Section -->
        <div class="col-12 col-md-6">
          <div class="card h-100 border-0 shadow-sm overflow-hidden">
            <img 
              src="<%= home.photo %>" 
              alt="<%= home.houseName %>" 
              class="card-img-top object-fit-cover img-fluid rounded-4"
            >
          </div>
        </div>

        <!-- Info Section -->
        <div class="col-12 col-md-6 d-flex flex-column gap-4">
          <!-- Description -->
          <div class="border-bottom pb-3">
            <h5 class="fw-semibold mb-2">Description</h5>
            <p class="text-muted small"><%= home.description %></p>
          </div>

          <!-- Location -->
          <div class="border-bottom pb-3">
            <h5 class="fw-semibold mb-2">Location</h5>
            <p class="text-muted small"><i class="fas fa-map-marker-alt me-2 text-danger"></i><%= home.location %></p>
          </div>

          <!-- Price -->
          <div class="border-bottom pb-3">
            <h5 class="fw-semibold mb-2">Price</h5>
            <p class="text-danger fw-bold fs-5">Rs <%= home.price %> / night</p>
          </div>

          <!-- Rating -->
          <div class="border-bottom pb-3 d-flex align-items-center">
            <h5 class="fw-semibold me-3 mb-0">Rating</h5>
            <div class="text-warning">
              <% for(let i=1; i<=5; i++) { %>
                <% if(i <= Math.floor(home.rating)) { %>
                  <i class="fas fa-star"></i>
                <% } else if(i - home.rating < 1) { %>
                  <i class="fas fa-star-half-alt"></i>
                <% } else { %>
                  <i class="far fa-star"></i>
                <% } %>
              <% } %>
              <span class="ms-2 text-muted small"><%= home.rating %> / 5</span>
            </div>
          </div>

          <!-- Favourite Button -->
          <div class="pt-2 mt-auto d-grid">
            <%- include('../partials/favourite') %>
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- Bootstrap JS Bundle CDN -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <!-- Font Awesome CDN -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>

  <style>
    .object-fit-cover {
      object-fit: cover;
      width: 100%;
      height: 100%;
      transition: transform 0.3s ease;
    }
    .card:hover .object-fit-cover {
      transform: scale(1.05);
    }
  </style>
</body>
</html>
